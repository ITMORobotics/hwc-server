{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://example.com/employee.schema.json",
    "description": "Scheme for verification lab task config",
    "type": "object",
    "properties": {
        "parameters":{
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "anyOf": [
                        {
                            "type": "number"
                        }, 
                        {
                            "type": "array",
                            "items": {
                                "type": "number"
                            }
                        }
                    ]
                }
            }
        },
        "answers": {
            "type": "object"
        },
        "files": {
            "anyOf":[
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items":{
                        "type": "string"
                    }
                }
            ]
        }
    },
    "required":[
        "answers",
        "parameters",
        "files"
    ]
}